package edu.umkc.tetrisama.major;

import edu.umkc.tetrisama.Tetris;
import edu.umkc.tetrisama.TileType;



public class TetrisImp implements ITetrisImp
{
	private TetrisArch _arch;
	boolean isPaused;
	private boolean isNewGame;
	private boolean isGameOver;
	private TileType currentType;
	private int currentCol;
	private int currentRow;
	private int currentRotation;

    public TetrisImp (){
    }

	public void setArch(TetrisArch arch){
		_arch = arch;
	}
	public TetrisArch getArch(){
		return _arch;
	}

	/*
  	  Myx Lifecycle Methods: these methods are called automatically by the framework
  	  as the bricks are created, attached, detached, and destroyed respectively.
	*/	
	public void init(){
	    //TODO Auto-generated method stub
	}
	public void begin(){
		Tetris tetris = new Tetris();
		tetris.startGame();
	}
	public void end(){
		//TODO Auto-generated method stub
	}
	public void destroy(){
		//TODO Auto-generated method stub
	}

	@Override
	public boolean isPaused() {
		// TODO Auto-generated method stub
			return isPaused;
	}

	@Override
	public boolean isNewGame() {
		// TODO Auto-generated method stub
		return isNewGame;
	}

	@Override
	public boolean isGameOver() {
		// TODO Auto-generated method stub
		return isGameOver;
	}

	@Override
	public TileType getPieceType() {
		// TODO Auto-generated method stub
		return currentType;
	}

	@Override
	public int getPieceCol() {
		// TODO Auto-generated method stub
		return currentCol;
	}

	@Override
	public int getPieceRow() {
		// TODO Auto-generated method stub
		return currentRow;
	}

	@Override
	public int getPieceRotation() {
		// TODO Auto-generated method stub
		return currentRotation;
	}

	/*
  	  Implementation primitives required by the architecture
	*/
}